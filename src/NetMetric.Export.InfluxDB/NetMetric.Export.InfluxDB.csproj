<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>
			Exports NetMetric metrics to InfluxDB v2 using the official Line Protocol format. Supports batching, compression, retry with exponential backoff, and precision control. Includes options validation and is designed for high-throughput observability pipelines.
		</Description>
		<PackageTags>
			netmetric;metrics;export;influxdb;telemetry;line-protocol;http;gzip;retries;observability;dotnet;aot
		</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Http" Version="9.0.8" />
		<PackageReference Include="Microsoft.Extensions.Options" Version="9.0.8" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.Export\NetMetric.Export.csproj" />
	</ItemGroup>

</Project>