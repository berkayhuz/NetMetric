<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>
			Provides dependency injection extensions to register NetMetric EventCounters exporters. Enables publishing metrics via .NET EventSource counters, supporting tools like dotnet-counters, Visual Studio, and PerfView. Follows the options pattern with idempotent and composable registration.
		</Description>
		<PackageTags>
			netmetric;metrics;eventcounters;dependencyinjection;extensions;dotnet-counters;telemetry;observability;perfview;visualstudio;diagnostics;aot;optionspattern
		</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.8" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.8" />
		<PackageReference Include="Microsoft.Extensions.Options" Version="9.0.8" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.Export.DependencyInjection\NetMetric.Export.DependencyInjection.csproj" />
		<ProjectReference Include="..\NetMetric.Export.EventCounters\NetMetric.Export.EventCounters.csproj" />
		<ProjectReference Include="..\NetMetric.Export\NetMetric.Export.csproj" />
	</ItemGroup>

</Project>