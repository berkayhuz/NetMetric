<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>
      QUIC metrics from MsQuic/System.Net.Quic EventCounters. Maps known counters (smoothed RTT, congestion
      window, bytes in flight, lost packets, datagrams, streams, connection errors) and publishes unknown
      counters via a guarded multi-gauge with cardinality controls and self-diagnostics.
    </Description>
    <PackageTags>
      netmetric;quic;msquic;eventcounters;rtt;cwnd;datagrams;streams;metrics;observability;http3;dotnet
    </PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.8" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
  </ItemGroup>

</Project>