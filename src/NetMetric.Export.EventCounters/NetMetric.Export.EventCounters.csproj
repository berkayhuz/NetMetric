<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>
			Enables publishing NetMetric metrics as .NET EventCounters and IncrementingEventCounters. Compatible with tools such as dotnet-counters, Visual Studio, and PerfView. Supports gauges, counters, distributions, summaries, and histograms with optional tag-aware naming and per-bucket output.
		</Description>
		<PackageTags>
			netmetric;metrics;eventsource;eventcounter;incrementingeventcounter;dotnet-counters;telemetry;diagnostics;observability;perfview;visualstudio;realtime;aot
		</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.8" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.Export\NetMetric.Export.csproj" />
	</ItemGroup>

</Project>