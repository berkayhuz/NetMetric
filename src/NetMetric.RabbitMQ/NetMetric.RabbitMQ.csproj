<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>
			RabbitMQ metrics module for NetMetric. Provides deep observability for RabbitMQ via lightweight collectors that track
			connection health, channel usage, queue depth, consumer rate, and publisher confirmation latency. Supports secure, configurable,
			and production-ready integration with .NET apps.
		</Description>
		<PackageTags>
			rabbitmq;metrics;monitoring;observability;netmetric;dotnet;queue;telemetry;publisher;consumer;latency;channel;connection
		</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.8" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.8" />
		<PackageReference Include="Microsoft.Extensions.Options" Version="9.0.8" />
		<PackageReference Include="RabbitMQ.Client" Version="7.1.2" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.RabbitMQ.Abstractions\NetMetric.RabbitMQ.Abstractions.csproj" />
	</ItemGroup>

</Project>