<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>
			Dependency injection utilities for the NetMetric.RabbitMQ module. Provides a configurable and resilient IRabbitMqConnectionProvider implementation with
			automatic retries, backoff, TLS support, and async disposal. Easily integrates RabbitMQ metrics into .NET apps via IServiceCollection.
		</Description>
		<PackageTags>
			rabbitmq;dependencyinjection;di;netmetric;metrics;dotnet;connection;channel;servicecollection;retry;backoff;ssl;observability
		</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.8" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.RabbitMQ.Abstractions\NetMetric.RabbitMQ.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.RabbitMQ\NetMetric.RabbitMQ.csproj" />
	</ItemGroup>

</Project>