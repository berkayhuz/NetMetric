<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>
      Outgoing HTTP client instrumentation for .NET. Provides a metric set, a DelegatingHandler
      for timing and sizes, and a DiagnosticSource observer for System.Net events to record
      request duration, request/response sizes, and totals for named HttpClient instances.
    </Description>
    <PackageTags>
      netmetric;httpclient;http;outgoing-requests;delegatinghandler;diagnostics;diagnosticsource;metrics;observability;opentelemetry;prometheus;dotnet
    </PackageTags>
  </PropertyGroup>

  <ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="9.0.8" />
		<PackageReference Include="Microsoft.Extensions.Http" Version="9.0.8" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
	</ItemGroup>

</Project>