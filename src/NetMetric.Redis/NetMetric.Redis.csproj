<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>
			Redis metrics module for NetMetric: provides detailed and production-grade Redis observability through StackExchange.Redis,
			including keyspace, memory, uptime, ping, latency, slowlog, and endpoint availability metrics. Supports multi-node setups,
			per-endpoint metrics, quantile summaries, and self-monitoring collectors.
		</Description>
		<PackageTags>
			redis;metrics;monitoring;observability;stackexchange.redis;dotnet;netmetric;prometheus;telemetry;latency;keyspace;slowlog
		</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Options" Version="9.0.8" />
		<PackageReference Include="StackExchange.Redis" Version="2.9.11" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.Redis.Abstractions\NetMetric.Redis.Abstractions.csproj" />
	</ItemGroup>

</Project>