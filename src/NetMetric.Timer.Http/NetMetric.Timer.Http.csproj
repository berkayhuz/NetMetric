<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>
			NetMetric.Timer.Http provides HTTP client instrumentation for .NET applications.
			It offers easy-to-use extension methods for adding timing handlers to IHttpClientBuilder,
			enabling automatic collection of HTTP request duration metrics via ITimerSink.
			Ideal for performance monitoring, diagnostics, and exporting timing data to observability platforms.
		</Description>
		<PackageTags>
			netmetric;metrics;observability;httpclient;telemetry;timing;performance;instrumentation;diagnostics;dotnet
		</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Http" Version="9.0.8" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.Timer\NetMetric.Timer.csproj" />
	</ItemGroup>

</Project>