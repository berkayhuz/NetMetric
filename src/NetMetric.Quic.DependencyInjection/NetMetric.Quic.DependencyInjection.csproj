<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>
      DI extensions to register QUIC metrics with QuicOptions. Uses IOptions to configure sampling interval,
      allowed providers, and fallback limits, and hosts the EventListener for process lifetime.
    </Description>
    <PackageTags>
      netmetric;quic;dependency-injection;di;servicecollection;hostedservice;options;eventcounters;metrics;observability;dotnet
    </PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.8" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\NetMetric.Quic\NetMetric.Quic.csproj" />
  </ItemGroup>

</Project>