<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>
			NetMetric.GC is a high-performance module for collecting .NET runtime GC metrics:
			allocation rate (bytes/s), heap size and change rate, GC pause time (%, ms),
			bucket histograms with tumbling windows, summaries (p50/p90/p99),
			generation (Gen0/1/2) counts, and runtime flags (Server GC, LOH compaction, latency mode).
			Uses System.Runtime EventCounters and GC APIs; ships collectors, options, and a lightweight listener.
		</Description>
		<PackageTags>
			NetMetric;dotnet;gc;garbage-collection;metrics;monitoring;observability;performance;
			System.Runtime;EventCounters;telemetry;histogram;summary;gauge;heap;memory;allocation;
			allocation-rate;pause;pause-duration;time-in-gc;latency;server-gc;loh;runtime;tracing
		</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.8" />
		<PackageReference Include="Microsoft.Extensions.Options" Version="9.0.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
	</ItemGroup>

</Project>