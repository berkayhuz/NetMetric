<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>
			Adds dependency injection support for the NetMetric Elasticsearch exporter. Provides DI configuration for exporting metrics to Elastic or OpenSearch clusters with validation, HttpClient setup, and automatic wiring into the metric pipeline.
		</Description>
		<PackageTags>
			netmetric;metrics;elasticsearch;export;dependency-injection;dotnet;telemetry;observability;elastic;opensearch;ndjson
		</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.8" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.8" />
		<PackageReference Include="Microsoft.Extensions.Options" Version="9.0.8" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.Export.Elastic.Abstractions\NetMetric.Export.Elastic.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.Export.Elastic\NetMetric.Export.Elastic.csproj" />
		<ProjectReference Include="..\NetMetric.Export\NetMetric.Export.csproj" />
	</ItemGroup>

</Project>