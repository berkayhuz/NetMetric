<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>
			Provides dependency injection extensions to register the NetMetric → OpenTelemetry exporter. Enables forwarding of NetMetric metrics to OpenTelemetry Meter instruments via IMetricExporter.
		</Description>
		<PackageTags>
			netmetric;opentelemetry;dependencyinjection;metrics;telemetry;bridge;exporter;dotnet;di;extensions
		</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.8" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.OpenTelemetryBridge\NetMetric.OpenTelemetryBridge.csproj" />
	</ItemGroup>

</Project>