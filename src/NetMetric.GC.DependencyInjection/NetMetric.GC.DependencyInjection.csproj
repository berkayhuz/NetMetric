<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Description>
			NetMetric.GC.DependencyInjection provides IServiceCollection extensions to wire up the NetMetric.GC module.
			AddNetMetricGc() registers SystemRuntimeCountersListener as IRuntimeGcMetricsSource and GcModule, and triggers
			the MetricOptions pipeline. Designed for quick integration with ASP.NET Core / the .NET Generic Host.
		</Description>
		<PackageTags>
			NetMetric;NetMetric.GC;dotnet;gc;garbage-collection;metrics;monitoring;observability;
			dependency-injection;IServiceCollection;Microsoft.Extensions.DependencyInjection;extensions;
			hosting;aspnetcore;generic-host;EventCounters;System.Runtime;startup;options;MetricOptions;module;registration
		</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.8" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NetMetric.Abstractions\NetMetric.Abstractions.csproj" />
		<ProjectReference Include="..\NetMetric.GC\NetMetric.GC.csproj" />
	</ItemGroup>

</Project>